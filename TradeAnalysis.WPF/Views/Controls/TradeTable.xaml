<UserControl
    x:Class="TradeAnalysis.WPF.Views.Controls.TradeTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeAnalysis.WPF.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="800"
    Style="{StaticResource PanelElement}"
    mc:Ignorable="d">

    <DataGrid
        AutoGenerateColumns="False"
        ItemsSource="{Binding TableElements}"
        Style="{StaticResource Table}">
        <DataGrid.Columns>
            <DataGridTextColumn
                Width="4*"
                Binding="{Binding Name}"
                Header="Название" />
            <DataGridTextColumn
                Width="*"
                Binding="{Binding BuyDate}"
                Header="Дата покупки" />
            <DataGridTextColumn
                Width="*"
                Binding="{Binding BuyPrice}"
                Header="Цена покупки" />
            <DataGridTextColumn
                Width="*"
                Binding="{Binding SellDate}"
                Header="Дата продажи" />
            <DataGridTextColumn
                Width="*"
                Binding="{Binding SellPrice}"
                Header="Цена продажи" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>

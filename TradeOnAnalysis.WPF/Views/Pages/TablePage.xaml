<UserControl
    x:Class="TradeOnAnalysis.WPF.Views.Pages.TablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:elements="clr-namespace:TradeOnAnalysis.WPF.Views.Controls"
    xmlns:local="clr-namespace:TradeOnAnalysis.WPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource Page}"
    mc:Ignorable="d">

    <Grid>
        <elements:AccountSelectBox
            Width="150"
            Height="25"
            Margin="10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DataContext="{Binding AccountSelect}" />
        <elements:TradeTable
            Margin="10,45,10,10"
            VerticalAlignment="Top"
            DataContext="{Binding TradeTable}" />
    </Grid>
</UserControl>

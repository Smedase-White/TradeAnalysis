<UserControl
    x:Class="TradeOnAnalysis.WPF.Views.Controls.AccountSelectBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:TradeOnAnalysis.WPF.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="160"
    mc:Ignorable="d">

    <ComboBox ItemsSource="{Binding AccountsSelections}" Style="{StaticResource AccountSelectBox}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="DropDownClosed">
                <i:InvokeCommandAction Command="{Binding CloseCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Width="20" IsChecked="{Binding IsSelected}" />
                    <Label
                        Width="100"
                        Content="{Binding Name}"
                        Style="{StaticResource Label}" />
                </StackPanel>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>

<UserControl
    x:Class="TradeOnAnalysis.WPF.Views.Controls.ColorBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TradeOnAnalysis.WPF.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="17"
    d:Width="205"
    Style="{StaticResource TransparentElement}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBox
            Grid.Column="0"
            Foreground="Red"
            Style="{StaticResource CorolComponent}"
            Text="{Binding Red}" />
        <TextBox
            Grid.Column="1"
            Foreground="Green"
            Style="{StaticResource CorolComponent}"
            Text="{Binding Green}" />
        <TextBox
            Grid.Column="2"
            Foreground="Blue"
            Style="{StaticResource CorolComponent}"
            Text="{Binding Blue}" />
        <TextBox Grid.Column="3" Text="{Binding Hex}">
            <TextBox.Background>
                <SolidColorBrush Color="{Binding Hex}" />
            </TextBox.Background>
        </TextBox>
    </Grid>
</UserControl>
